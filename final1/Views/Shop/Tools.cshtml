@model IEnumerable<final1.Models.Products>

@{
    ViewData["Title"] = "Nail Tools";
}

<head>
    <title>@ViewData["Title"] - La'nails</title>
    <link rel="stylesheet" href="~/css/Tool.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
</head>

<div class="container text-center">
    
    <h1 class="heading">NAIL TOOLS</h1>
    <div class=" text-center">​
        <form asp-controller="Shop" asp-action= "Tools">​
        <input class="search" type="text" name="querry" placeholder="Search..." />​
        <button type="submit" ><i class=" bi-search"></i></button>​
        </form>​
    </div>
    


    <div class="row g-4 table">
        @foreach (var products in Model)
        {
            <div class="cc col-sm-6 col-md-3 pb-4">
                <div class="card">
                    <div class="card-image">
                        <img class="image" src="~/products/@products.ImageUrl1" style="width:auto; max-height:200px" />
                    </div>
                    <div class="sec">
                        <div class="describe">
                            <p class="name">@products.Name</p>
                            <p class="active">฿@products.Price</p>
                            
                        </div>
                    </div>   
                </div>
                <div class="overlay">
                    <div class="button"> <a class="a-cleanup" asp-controller="Shop" asp-action="Details" asp-route-id="@products.Id"> Detail </a></div>
                    <div class="button"><a asp-controller="Cart" asp-action="AddToCartt" asp-route-id="@products.Id" >Add to cart</a></div>
                </div>
            </div>

        }
    </div>

