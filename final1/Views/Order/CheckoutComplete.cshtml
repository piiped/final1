@model final1.Models.Order

<head>
    <title>@ViewData["Title"] - Payment</title>
    <link rel="stylesheet" href="~/css/payment.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
</head>


<div class="container">
    <img class="logo-payment" src="~/logo_red.png" width="167px" />
    <h3>Payment</h3>
    <div class="row">
            <div class="container">
                <div class="row">
                    <div class="qr-code">
                        <img src="~/payment/qr_code.jpg" width="300px" />
                        <p class="sec">*Please check the balance before transferring.</p>
                    </div>
                    <div class="section"> 
                        <p class="sec-1">SCAN TO PAY</p>
                        <p class="sec-2">117-8-97039-5</p>
                        <p class="sec-2">ปพิชญา กาแดง</p>
                        <p class="sec-2">KBANK</p>
                </div>
                <div class="ckeck">
                    <label for="amount">Payment amount</label>
                    <input type="number" id="amount" name="amount" placeholder="1000">
                    <label for="date">Date</label>
                    <input type="date" id="date" name="date">
                    <label for="time">Time</label>
                    <input type="time" id="time" name="time">
                </div>
                </div>
        </div>
    </div>
    <hr/>
    <h4>Cart <span class="price" style="color:black"><i class="fa fa-shopping-cart"></i> <b></b></span></h4>
    <hr />
    @foreach (var item in Model.OrderItem)
    {
        var itemTotal = item.Product.Price * item.Quantity;
        <div class="tr">
        <p>
            <a class="a-cleanup" asp-controller="Shop" asp-action="Details" asp-route-id="@item.Id">
                    <img src="~/products/@item.Product.ImageUrl1" style="height: 4em">
            </a><span class="price">
            </span></p>
        <p>
            <a class="a-cleanup" asp-controller="Shop" asp-action="Details" asp-route-id="@item.Id">@item.Product.Name</a><span class="price">
            </span>
            </p>
            <p>@item.Quantity<span class="price"></span></p>
        <p class="prc">@itemTotal.ToString("c")<span class="price"></span></p>
        
    </div>
    }
    <hr>
    <p>Total <span class="price" style="color:black"><strong class="total">@Model?.OrderTotal.ToString("c")</strong></span></p>
    <a class="btn btn-primary " asp-controller="Order" asp-action="Complete"><div>COMPLETE</div> </a>
</div>
    

